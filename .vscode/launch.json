    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run test.ego",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}", 
            "args": ["run", "test.ego"]
        },
        {
            "name": "Debug test.ego",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}", 
            "args": ["run", "test.ego", "-d"]
        },
        {
            "name": "Test test.ego",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}", 
            "args": ["test", "test.ego"]
        },
        {
            "name": "Local ego server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}", 
            "args": ["server", "run", "-k"]
        },
        {
            "name": "Display Server cache",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}", 
            "args": ["--output-format", "json", "server", "cache", "list"]
        }
    ]
}