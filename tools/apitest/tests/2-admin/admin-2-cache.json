{
    "description": "Check status of server cache",
    "request": {
        "method": "GET",
        "endpoint": "{{SCHEME}}://{{HOST}}/admin/caches",
        "headers": {
            "Content-Type": ["application/json"],
            "Accept": ["*/*"],
            "Authorization": ["Bearer {{API_TOKEN}}"]
        }
    },
    "response": {
        "status": 200
    },
    "tests": [
        {
            "name": "api version",
            "query": "server.api",
            "value": "1"
        },
        {
            "name": "server id",
            "query": "server.id",
            "value": "{{SERVER_ID}}"
        },
        {
            "name": "Service size present",
            "query": "serviceSize",
            "op": ">=",
            "value": "0"
        },
        {
            "name": "Asset size present",
            "query": "assetSize",
            "op": ">=",
            "value": "0"
        },
        {
            "name": "Asset count present",
            "query": "assetCount",
            "op": ">=",
            "value": "0"
        },
        {
            "name": "Service count present",
            "query": "serviceCount",
            "op": ">=",
            "value": "0"
        }
    ]
}