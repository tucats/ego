{
    "description": "Get specific user",
    "request": {
        "method": "GET",
        "endpoint": "/admin/users/{{USER}}",
        "headers": {
            "Accept": ["application/vnd.ego.user+json"],
            "Authorization": ["Bearer {{API_TOKEN}}"]
        }
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": ["application/vnd.ego.user+json"]
        }
    },
    "tests": [
        {
            "name": "api version",
            "query": "server.api",
            "value": "1"
        },
        {
            "name": "server id",
            "query": "server.id",
            "value": "{{SERVER_ID}}"
        },
        {
            "name": "user admin name",
            "query": "name",
            "value": "{{USER}}"
        },
        {
            "name": "user admin root permissions",
            "query": "permissions.*",
            "value": "ego.root"
        }
    ]
}