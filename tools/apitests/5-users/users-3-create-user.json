{
    "description": "Create new user",
    "request": {
        "method": "POST",
        "endpoint": "/admin/users/",
        "headers": {
            "Accept": ["application/vnd.ego.user+json"],
            "Content-Type": ["application/vmd.ego.user+json"],
            "Authorization": ["Bearer {{API_TOKEN}}"]
        },
        "body": {
            "name": "u{{USERUUID}}",
            "password": "zork",
            "permissions": [
               "bar"
            ]
         }
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": ["application/vnd.ego.user+json"]
        }
    },
    "tests": [
        {
            "name": "api version",
            "query": "server.api",
            "value": "1"
        },
        {
            "name": "server id",
            "query": "server.id",
            "value": "{{SERVER_ID}}"
        },
        {
            "name": "user name",
            "query": "name",
            "value": "u{{USERUUID}}"
        },
        {
            "name": "user permission",
            "query": "permissions.0",
            "value": "bar"
        }
    ]
}