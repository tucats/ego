{
    "description": "Restore previous ROUTE logger setting",
    "request": {
        "method": "GET",
        "endpoint": "{{SCHEME}}://{{HOST}}/services/admin/log",
        "params": {
            "tail": "3"
        },
        "headers": {
            "Content-Type": ["application/json"],
            "Accept": ["*/*"],
            "Authorization": ["Bearer {{API_TOKEN}}"]
        }
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": ["application/vnd.ego.log.lines+json"]
        }
    },
    "tests": [
        {
            "name": "api version",
            "query": "server.api",
            "value": "1"
        },
        {
            "name": "server id",
            "query": "server.id",
            "value": "{{SERVER_ID}}"
        },
        {
            "name": "number of lines returned",
            "query": "lines.*",
            "op": "len",
            "value": "3"
        },
        {
            "name": "log line contains time",
            "query": "lines.1",
            "op": "contains",
            "value": "\"time\":"
        },
        {
            "name": "log line contains server id",
            "query": "lines.1",
            "op": "contains",
            "value": "{{SERVER_ID}}"
        }
    ]
}