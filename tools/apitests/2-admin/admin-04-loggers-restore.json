{
    "description": "Restore previous ROUTE logger setting",
    "request": {
        "method": "POST",
        "endpoint": "/admin/loggers",
        "headers": {
            "Content-Type": ["application/json"],
            "Accept": ["*/*"],
            "Authorization": ["Bearer {{API_TOKEN}}"]
        },
        "body":{
            "keep": {{LOGGER_RETAIN}},
             "loggers": {
                "route": {{ROUTE_LOGGER_STATUS}}
             }
          }
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": ["log.status+json"]
        }
    },
    "tests": [
        {
            "name": "api version",
            "query": "server.api",
            "value": "1"
        },
        {
            "name": "server id",
            "query": "server.id",
            "value": "{{SERVER_ID}}"
        },
        {
            "name": "restore saved logger retain value",
            "query": "keep",
            "value": "{{LOGGER_RETAIN}}"
        },
        {
            "name": "ROUTE logger",
            "query": "loggers.ROUTE",
            "op": "eq",
            "value": "{{ROUTE_LOGGER_STATUS}}"
        },
        {
            "name": "SERVER logger",
            "query": "loggers.SERVER",
            "value": "true"
        }
    ]
}