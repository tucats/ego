{
    "description": "Flush server cache",
    "request": {
        "method": "DELETE",
        "endpoint": "/admin/caches",
        "headers": {
            "Content-Type": ["application/json"],
            "Accept": ["*/*"],
            "Authorization": ["Bearer {{API_TOKEN}}"]
        }
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": ["cache+json"]
        }
    },
    "tests": [
        {
            "name": "api version",
            "query": "server.api",
            "value": "1"
        },
        {
            "name": "server id",
            "query": "server.id",
            "value": "{{SERVER_ID}}"
        },
        {
            "name": "Service size present",
            "query": "serviceSize",
            "value": "{{SERVICE_CACHE_SIZE}}"
        },
        {
            "name": "Asset count present",
            "query": "assetCount",
            "value": "0"
        },
        {
            "name": "Service count present",
            "query": "serviceCount",
            "value": "0"
        }
    ]
}