
{
    "description": "Set an invalid logger name",
    "request": {
        "method": "POST",
        "endpoint": "/admin/loggers",
        "headers": {
            "Content-Type": ["application/json"],
            "Accept": ["*/*"],
            "Authorization": ["Bearer {{API_TOKEN}}"]
        },
        "body": {
            "keep": 100,
            "loggers": {
               "routes": true
            }
         }
    },
    "response": {
        "status": 400,
        "headers": {
            "Content-Type": ["error+json"]
        }
    },
    "tests": [
        {
            "name": "api version",
            "query": "server.api",
            "value": "1"
        },
        {
            "name": "server id",
            "query": "server.id",
            "value": "{{SERVER_ID}}"
        },
        {
            "name": "validation error message",
            "query":"msg",
            "op": "contains",
            "value":"Invalid"
        },
        {
            "name": "validation error value",
            "query":"msg",
            "op": "contains",
            "value":"routes"
        }
    ]
}
