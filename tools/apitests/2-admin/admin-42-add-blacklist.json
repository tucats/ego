{
    "description": "Add token to blacklist",
    "request": {
        "method": "PUT",
        "endpoint": "/admin/tokens/",
        "headers": {
            "Content-Type": ["application/json"],
            "Accept": ["*/*"],
            "Authorization": ["Bearer {{API_TOKEN}}"]
        },
        "body": [
            "{{API_TOKEN_BL_ID}}"
        ]
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": ["vnd.ego.error+json"]
        }
    },
    "tests": [
        {
            "name": "api version",
            "query": "server.api",
            "value": "1"
        },
        {
            "name": "server id",
            "query": "server.id",
            "value": "{{SERVER_ID}}"
        }
    ]
}