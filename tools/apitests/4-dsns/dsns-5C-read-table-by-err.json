{
    "description": "read rows in table sorted by bad column name",
    "request": {
        "method": "GET",
        "endpoint": "/dsns/dsn-{{DSNUUID}}/tables/ages/rows",
        "parameters": {
            "sort": "wrong"
        },
        "headers": {
            "Content-Type": ["application/json"],
            "Accept": ["*/*"],
            "Authorization": ["Bearer {{API_TOKEN}}"]
        }
    },
    "response": {
        "status": 400,
        "headers": {
            "Content-Type": ["application/vnd.ego.error+json"]
        }
    },
    "tests": [
        {
            "name": "api version",
            "query": "server.api",
            "value": "1"
        },
        {
            "name": "server id",
            "query": "server.id",
            "value": "{{SERVER_ID}}"
        },
        {
            "name": "error message",
            "query": "msg",
            "op": "contains",
            "value": ": wrong"
        }
    ]
}