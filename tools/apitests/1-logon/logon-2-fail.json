{
    "description": "Logon attempt with bad password",
    "request": {
        "method": "POST",
        "endpoint": "{{SCHEME}}://{{HOST}}/services/admin/logon",
        "body": "{ \"username\": \"{{USER}}\", \"password\": \"BOGUS${{PASSWORD}}\" }",
        "headers": {
            "Content-Type": ["application/json"],
            "Accept": ["*/*"]
        }
    },
    "response": {
        "status": 401,
        "headers": {
            "Content-Type": ["error+json"]
        }
    },
    "tests": [
        {
            "name": "api version",
            "query": "server.api",
            "value": "1"
        },
        {
            "name": "server id",
            "query": "server.id",
            "value": "{{SERVER_ID}}"
        }
    ]
}