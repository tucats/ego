// Uses the handy https://github.com/common-nighthawk/go-figure package to
// print out ascii-art-style strings. This job prints the string using
// each available font.

func main() {
    msg := "Healthy Ego"
    
    fonts := strings.Blockfonts()
    
    for _, font := range fonts {
        fmt.Printf("font: %s\n%s\n\n", font, strings.Blockprint(msg, font))
    }
}