{
    "@dsn": {
        "_class": "_object",
        "fields": [
            {
                "_class": "_element",
                "name": "name",
                "type": "_string",
                "required": true
            },
            {
                "_class": "_element",
                "name": "id",
                "type": "_uuid"
            },
            {
                "_class": "_element",
                "name": "provider",
                "type": "_string",
                "enum": [ "sqlite3", "postgres"],
                "case": true,
                "required": true
            },
            {
                "_class": "_element",
                "name": "database",
                "type": "_string",
                "required": true
            },
            {
                "_class": "_element",
                "name": "host",
                "type": "_string"
            },
            {
                "_class": "_element",
                "name": "schema",
                "type": "_string"
            },
            {
                "_class": "_element",
                "name": "port",
                "type": "_int"
            },
            {
                "_class": "_element",
                "name": "user",
                "type": "_string"
            },
            {
                "_class": "_element",
                "name": "password",
                "type": "_string"
            },
            {
                "_class": "_element",
                "name": "secured",
                "type": "_bool"
            },
            {
                "_class": "_element",
                "name": "native",
                "type": "_bool"
            },
            {
                "_class": "_element",
                "name": "restricted",
                "type": "_bool"
            }
        ]
    },
    "@dsn.permission": {
        "_class": "_object",
        "fields": [
            {
                "_class": "_element",
                "name": "DSN",
                "type": "_string",
                "required": true
            },
            {
                "_class": "_element",
                "name": "User",
                "type": "_string",
                "required": true
            },
            {
                "_class": "_element",
                "name": "Actions",
                "type": "@dsn.actions"
            }
        ]
    },
    "@dsn.actions": {
        "_class": "_array",
        "items": {
            "_class": "_element",
             "type": "_string",
             "enum": [ "read", "write", "admin", "+read", "+write", "+admin", "-read", "-write", "-admin" ]
        }
    },
    "@dsn.permissions": {
        "_class": "_array",
        "items": {
            "_class": "_element",
            "type": "@dsn.permission"
        }
    },
    "dsns:post": {
        "_class": "_alias",
        "type": "@dsn"
    },
    "dsns.@permissions:post": {
        "_class": "_alias",
        "type": "@dsn.permission"
    }
}