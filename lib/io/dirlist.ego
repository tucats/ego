package io

func DirList(path string) string {

    a := []string{}
    r := ""

    try {
        a = io.ReadDir(path)
    } catch (e) {
        print e
        return "unable to read directory path: " + path
    }
    fmtstr := "%s  %-20s  %10d  %s\n"
    for _, i := range a {
        r = r + fmt.Sprintf(fmtstr, i.Mode,  strings.Left(i.Modified, 19), i.Size, i.Name) 
    }
    return r
}