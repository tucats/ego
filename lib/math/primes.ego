package math

/* Classic prime number search using sieve method */
func Primes(size int) []int {

	t := make([]bool, size+1)
	r := make([]int, 0)

	for p := 2;  p < size ; p = p + 1{

		for n := p; n < size; n = n + p {
			t[n] = true
		}
		next := 0
		for n := p+1; n < size; n= n + 1 {
			if !t[n] {
				next = n
				break
			}
		}
		if next == 0 {
			break
		}
		r = append(r, next)
		p = next - 1

	}
	return r
}