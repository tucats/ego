@test "packages: tables"
{

    t := tables.New("Name", "Age")
    t.Pagination(0,0)
    
    t.AddRow("Tom", 51)
    t.AddRow("Mary", 48)

    t.AddRow({ Name: "Sarah", Age: 22})

    t.Sort("Name")

    got := t.String()

    // Note, this is very sensitive to formatting
    expect := `Name     Age    
=====    ===    
Mary     48     
Sarah    22     
Tom      51     
`
    @assert got == expect
    @assert t.Headings[0] == "Name"
    @assert t.Headings[1] == "Age"

}

@pass