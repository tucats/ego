/* Classic prime number search using sieve method */

@test "seive test"

func primes(size) [] {

	array t[size+1] = false
	array r[0]

	for p := 2;  p <= size ; p = p + 1{

		for n := p; n <=size; n = n + p {
			t[n] = true
		}
		next := 0
		for n := p+1; n <= size; n= n + 1 {
			if !t[n] {
				next = n
				break
			}
		}
		if next == 0 {
			break
		}
		r = r + next
		p = next - 1

	}
	return r
}

// Calcuate the array containing the primes from 1..10
p := primes(10)
@assert T.Equal(p, [ 3, 5, 7])
@pass