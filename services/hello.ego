// Really simple page that just constructs some HTML, using templates.

@template body `
<body>
    {{.Body}}
</body>
`

@template head `
<head>
    {{.Heading}}
    <hr/>
    <p>
</head>
`

@template html `
    {{template "head" . }}
    {{template "body" . }}
`

page := { 
    Heading : "Test Web Page",
    Body : "Hello, world"
}

// The text we print becomes the body of the reply, which in this
// case is HTML code.
fmt.Println( strings.Template(html, page))
